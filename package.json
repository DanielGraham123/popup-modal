{
    "version": "0.1.0",
    "license": "MIT",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "start": "tsdx watch",
        "build-css": "cp src/index.css dist/styles.css",
        "build": "tsdx build && npm run build-css",
        "test": "tsdx test --passWithNoTests",
        "lint": "tsdx lint",
        "prepare": "tsdx build",
        "size": "size-limit",
        "analyze": "size-limit --why"
    },
    "peerDependencies": {
        "react": ">=16"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsdx lint"
        }
    },
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "name": "popup-modal",
    "author": "DanielGraham123",
    "module": "dist/popup-modal.esm.js",
    "size-limit": [
        {
            "path": "dist/popup-modal.cjs.production.min.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/popup-modal.esm.js",
            "limit": "10 KB"
        }
    ],
    "devDependencies": {
        "@size-limit/preset-small-lib": "^8.2.6",
        "@testing-library/jest-dom": "^5.17.0",
        "@testing-library/react": "^14.0.0",
        "@types/react": "^18.2.17",
        "@types/react-dom": "^18.2.7",
        "autoprefixer": "^10.4.14",
        "husky": "^8.0.3",
        "postcss": "^8.4.27",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "size-limit": "^8.2.6",
        "tailwindcss": "^3.3.3",
        "tsdx": "^0.14.1",
        "tslib": "^2.6.1",
        "typescript": "^3.9.10"
    },
    "dependencies": {
        "classnames": "^2.3.2"
    }
}
